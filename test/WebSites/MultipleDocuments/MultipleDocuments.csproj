<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\src\Swashbuckle.AspNetCore.SwaggerGen\Swashbuckle.AspNetCore.SwaggerGen.csproj" />
    <ProjectReference Include="..\..\..\src\Swashbuckle.AspNetCore.SwaggerUI\Swashbuckle.AspNetCore.SwaggerUI.csproj" />
    <ProjectReference Include="..\..\..\src\Swashbuckle.AspNetCore.Swagger\Swashbuckle.AspNetCore.Swagger.csproj" />
    <ProjectReference Include="..\..\Swashbuckle.AspNetCore.TestSupport\Swashbuckle.AspNetCore.TestSupport.csproj" />
  </ItemGroup>

  <Target Name="SwaggerToFile" AfterTargets="AfterBuild">
    <PropertyGroup>
      <DotNetSwaggerPath>..\..\..\src\Swashbuckle.AspNetCore.Cli\bin\$(Configuration)\net5.0\dotnet-swagger.dll</DotNetSwaggerPath>
    </PropertyGroup>
    <Exec Command="dotnet $(DotNetSwaggerPath) tofile --yaml --output swagger-admin.yaml $(OutputPath)$(AssemblyName).dll admin" />
    <Exec Command="dotnet $(DotNetSwaggerPath) tofile --yaml --output swagger-public.yaml $(OutputPath)$(AssemblyName).dll public" />
  </Target>

</Project>
